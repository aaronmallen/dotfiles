#!/usr/bin/env zsh

command -v brew > /dev/null \
  && brew bundle && sleep 1 \
  && brew update && sleep 1 \
  && brew upgrade && sleep 1 \
  && brew cleanup && sleep 1 \
  && brew doctor

command -v softwareupdate > /dev/null \
  && softwareupdate -i --all && sleep 1 \
  && defaults write com.apple.dock ResetLaunchPad -bool true
killall Dock
